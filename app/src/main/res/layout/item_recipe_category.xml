<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_260dp"
    android:layout_height="@dimen/dimen_96dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_marginStart="@dimen/dimen_4dp"
    android:layout_marginBottom="@dimen/dimen_4dp"
    android:foreground="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dimen_12dp">

    <RelativeLayout
        android:id="@+id/containerRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/MealRecipeText.SemiBold.14"
            android:layout_width="@dimen/dimen_150dp"
            android:gravity="center"
            android:textColor="@color/colorNeutralGray"
            tools:text="Classic Greek Salada"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRecipe"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:src="@drawable/img_sample_recipe"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>